<%= f.association :pais,
  collection: Sip::Pais.habilitados,
  label_method: :nombre, 
  value_method: :id
%>
<%= f.association :departamento,
  collection: Sip::Departamento.habilitados.
    where(id_pais: f.object.pais_id),
  label_method: :nombre, 
  value_method: :id
%>
<%= f.association :municipio,
  collection: Sip::Municipio.habilitados.where(
    id_departamento: f.object.departamento_id),
  label_method: :nombre, 
  value_method: :id
%>
